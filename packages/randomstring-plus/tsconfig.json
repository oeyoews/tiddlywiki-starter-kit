{
	"compilerOptions": {
		"declaration": true,
		"target": "es2019",
		"moduleResolution": "node",
		"strict": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
	},
	"exclude": [
		"dist/",
		"test/",
		"app/",
		"node_modules/"
	],
	"include": [
		"src/**/*.ts",
		"types/**/*.d.ts",
		"types.d.ts",
		"index.ts"
	]
}